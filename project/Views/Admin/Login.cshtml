
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div>
        <form method="post">
            <table>
                <tr>
                    <td> Username </td>
                    <td> <input type="text" name="uid" class="form-control" /></td>
                </tr>
                <tr>
                    <td> Password </td>
                    <td> <input type="text" name="pw" class="form-control" /></td>
                </tr>
                <tr>
                    <td> </td>
                    <td> <input type="submit" value="Login" class="btn-primary" /> </td>
                </tr>
            </table>
        </form>
    </div>
    <div id="show" class="alert-danger" style=" color : red">
        <h4> @ViewData["a"]</h4>
    </div>
</body>
</html>
